# Application Environment
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Backend Core (Healthcare Operations)
BACKEND_CORE_HOST=0.0.0.0
BACKEND_CORE_PORT=8000
DATABASE_URL=postgresql://healthlink_user:healthlink_pass_2024@localhost:5432/healthlink_core

# Backend Reporting (Analytics & Research)
BACKEND_REPORTING_HOST=0.0.0.0
BACKEND_REPORTING_PORT=8001
MONGODB_URL=mongodb://healthlink_admin:healthlink_mongo_2024@localhost:27017/healthlink_reporting?authSource=admin

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8001
CORS_ALLOW_CREDENTIALS=True

# Frontend
REACT_APP_BACKEND_CORE_URL=http://localhost:8000
REACT_APP_BACKEND_REPORTING_URL=http://localhost:8001
REACT_APP_NAME=HealthLink360

# File Storage
UPLOAD_DIR=./uploads
REPORT_DIR=./generated_reports
FILLED_REPORT_DIR=./filled_reports
LOG_DIR=./logs

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI Services (Optional - for future enhancements)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@healthlink360.com

# MCP Server Configuration
MCP_CORE_AGENTS_PORT=9000
MCP_NIH_PORT=9001
MCP_ORCHESTRATOR_PORT=9002
MCP_REPORT_GEN_PORT=9003
MCP_RND_PORT=9004

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Kafka Configuration (Optional - for event streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=healthlink360

# Security & Compliance
PII_ENCRYPTION_KEY=your-pii-encryption-key-32-chars-min
ENABLE_AUDIT_LOGGING=True
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# WHO & NIH Integration
WHO_API_ENDPOINT=https://api.who.int/v1
NIH_API_ENDPOINT=https://api.nih.gov/v1
ENABLE_WHO_REPORTING=True
ENABLE_NIH_REPORTING=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=3
